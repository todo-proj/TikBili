<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|end"
    android:layout_marginBottom="60dp"
    android:layout_marginEnd="8dp"
    android:gravity="center"
    tools:background="@color/black"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp">

        <com.benyq.tikbili.base.widget.ClipImageView
            android:id="@+id/iv_avatar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:clip_type="circle"
            app:enable_bound="true"
            app:bound_color="@color/white"
            android:layout_gravity="center_horizontal" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_add"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_horizontal|bottom"
            app:shapeAppearanceOverlay="@style/circleStyle"
            android:background="#ff0000"
            android:src="@drawable/ic_add_owner"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_like"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        tools:text="1245"
        app:drawableTopCompat="@drawable/ic_thumb_up" />

    <TextView
        android:id="@+id/tv_reply"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        app:drawableTopCompat="@drawable/ic_comment"
        tools:text="642" />

    <TextView
        android:id="@+id/tv_coin"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        app:drawableTopCompat="@drawable/ic_coin"
        tools:text="12" />

    <TextView
        android:id="@+id/tv_star"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        app:drawableTopCompat="@drawable/ic_star"
        tools:text="12" />

    <TextView
        android:id="@+id/tv_share"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        app:drawableTopCompat="@drawable/ic_share"
        tools:text="12" />



</LinearLayout>